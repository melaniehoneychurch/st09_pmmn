<div id="summarySheet" class="container-fluid">
          <!-- Content Row -->
          <div class="row mt-2">

		  	<div class="col-xl-2 col-lg-3">
                  <div class="card bg-{% if product.colorName %}{{product.colorName}}{% else %}primary{%endif%} text-white shadow">
                    <div class="card-body">
                      <div class="text-center">
                        {{ product.frenchName }}
                      </div>
                    </div>
                  </div>
            </div>

			<!-- Area Chart -->
            <div class="col-xl-3 col-lg-3">
              <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">{% trans %}General informations{% endtrans %}</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                  	<ul class="list-group py-3">
						<li class="list-group-item">{{ product.englishName }}</li>
						<li class="list-group-item">{{ product.nomenclature }}</li>
						<li class="list-group-item">{{ product.otherName }}</li>
						<li class="list-group-item">N° CAS : {{ product.casNumber }}</li>
					</ul>
                </div>
              </div>
            </div>

            <!-- Area Chart -->
            <div class="col-xl-4 col-lg-3">
              <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">{% trans %}Technical informations{% endtrans %}</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                  	<ul class="list-group py-3 ">
						<li class="list-group-item">{% trans %}Molar mass{% endtrans %} : {{ product.molarMass }} g/mol</li>
						<li class="list-group-item">{% trans %}Density{% endtrans %} : {{ product.density }}</li>
						<li class="list-group-item">Tf : {{ product.meltingTemperature }} °C</li>
						<li class="list-group-item">Te : {{ product.boilingTemperature }} °C</li>
						<li class="list-group-item">n : {{ product.opticalIndex }}</li>
						<li class="list-group-item">T° {% trans %}autoflamm{% endtrans %} : {{ product.autoflameTemperature }} °C</li>
					</ul>
                </div>
              </div>
            </div>

            <!-- Area Chart -->
            <div class="col-xl-3 col-lg-3">
              <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">{% trans %}Family{% endtrans %}</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                  {% for family in product.families %}
                  <p>{{ family.name }}</p>
                  {% endfor %}
                </div>
              </div>
            </div>

          </div>

		  <!-- Content Row -->
          <div class="row mt-2">

            <!-- Area Chart -->
            <div class="col-xl-5 col-lg-3">
              <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">{% trans %}Schema{% endtrans %}</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                  	<div class="text-center">
					  {% if product.imageNameFormula %}
                    	<img class="img-fluid px-3 px-sm-4 mt-3 mb-4" style="width: 250px; height:auto;" src="{{ vich_uploader_asset(product, 'formulaImageFile') }}" alt="">
                  	  {% endif %}
					</div>
                </div>
              </div>
            </div>

            <!-- Area Chart -->
            <div class="col-xl-7 col-lg-3">
              <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">{% trans %}Danger pictograms{% endtrans %}</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
					<div class="text-center">
						{% for dangerPictogram in dangerPictograms %}
							{% if dangerPictogram.imageName %}
								<img class="img-fluid px-3 px-sm-4 mt-3 mb-4" style="width: 250px; height:auto;" src="{{ vich_uploader_asset(dangerPictogram, 'imageFile') }}" alt="">
							{% endif %}
						{% endfor %}
					</div>
                </div>
              </div>
            </div>

          </div>

		  

		  <!-- Content Row -->
          <div class="row mt-2">

            <!-- Area Chart -->
            <div class="col-xl-5 col-lg-3">
              <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">{% trans %}Risk of use{% endtrans %}</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
					<div class="text-justify">
                  		<p>{{ product.riskOfUse }}</p>
					</div>
                </div>
              </div>
            </div>

            <!-- Area Chart -->
            <div class="col-xl-7 col-lg-3">
              <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">{% trans %}Obligation pictograms{% endtrans %}</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                  <div class="text-center">
                    {% for obligationPictogram in obligationPictograms %}
                      {% if obligationPictogram.imageName %}
                        <img class="img-fluid px-2 px-sm-4 mt-3 mb-4" style="width: 250px; height:auto;" src="{{ vich_uploader_asset(obligationPictogram, 'imageFile') }}" alt="" >
                      {% endif %}
                    {% endfor %}
                  </div>
                </div>
              </div>
            </div>

          </div>

		  <!-- Content Row -->
          <div class="row mt-2">

            <!-- Area Chart -->
            <div class="col-xl-6 col-lg-3">
              <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">{% trans %}Hazardous mixtures{% endtrans %}</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                  <div class="text-justify">
                              <p>{{ product.dangerousMixtures }}</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Area Chart -->
            <div class="col-xl-3 col-lg-3">
              <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">{% trans %}Storage{% endtrans %}</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                  <div style="background-color: {{product.storage.color}};" class="rounded text-center">
                    {{ product.storage.name }}
					        </div>
                </div>
              </div>
            </div>

			<!-- Area Chart -->
            <div class="col-xl-3 col-lg-3">
              <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">{% trans %}Bin{% endtrans %}</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                  <div style="background-color: {{product.trashCan.color}};" class="rounded text-center">
                    {{ product.trashCan.name }}
                  </div>
                </div>
              </div>
            </div>

          </div>

			<!-- Content Row -->
          <div class="row mt-2">

			<!-- Area Chart -->
            <div class="col-xl-12 col-lg-12">
              <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">{% trans %}Description{% endtrans %}</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                  	<div class="text-justify">
                      <p>{{ product.frenchCommentary }}</p>
                    </div>
                </div>
              </div>
            </div>


          </div>

		  <!-- Content Row -->
          <div class="row mt-2">

			<!-- Area Chart -->
            <div class="col-xl-12 col-lg-12">
              <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">{% trans %}Hazard statements{% endtrans %}</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                  	{% for statement in product.hazardStatements %}
						          <p>{{ statement.code }}: {{ statement.text }}</p>
					          {% endfor %}
                </div>
              </div>
            </div>

          </div>

		        <!-- Content Row -->
          <div class="text-right">
            <p>Date de dernière mise à jour : {{ update }}</p>
          </div>

          
          <div id="qrCode" class="text-center" hidden>
                    
            <img src="{{ qrCode.writeDataUri }}" height="200px"/>
          </div>
                



</div>