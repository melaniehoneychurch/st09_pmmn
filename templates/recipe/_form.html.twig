{{ form_start(form) }}

{# Form #}
<!-- Content Row -->
<div class="row">

    <!-- Area Chart -->
    <div class="col-xl-12 col-lg-12">
        <div class="card shadow mb-4">

            <!-- Card Header -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">{% trans %}Write a recipe{% endtrans %}</h6>
            </div>


            <!-- Card Body - search options -->
            <div class="card-body">
                {{ form_row(form.title, {'label':'Title of your recipe'}) }}
                {{ form_row(form.description, {'label':'Description of your recipe'}) }}
                {{ form_row(form.confidentiality, {'label':'Confidential recipe'}) }}

                <h5>{% trans %}Ingredients{% endtrans %}</h5>
                <p/>

                <div class="ingredients-list" data-prototype="{{ form_widget(form.ingredients.vars.prototype)|e('html_attr') }}">
                    {% for row in form.ingredients %}
                        <div class="panel panel-warning card border-secondary text-dark mb-3">
                            <div class="panel-heading card-header">{{ row.vars.value.product.frenchName }}</div>
                            <div class="panel-body card-body">
                                {{ form_row(row) }}
                            </div>
                        </div>
                    {% endfor %}
                </div>


            </div>

        </div>

        <div class="text-right">
            <div style="display:inline-block"><button class="btn btn-primary">{{ button|default('Save') }}</button></div>
            <div style="display:inline-block"><a href="{{ path('recipe.cancel') }}" class="mt-2 d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"> {% trans %}Cancel{% endtrans %}</a></div>
        </div>

    </div>

</div>

{{ form_end(form) }}


