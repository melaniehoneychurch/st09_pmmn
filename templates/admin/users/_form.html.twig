{% block body %}
    {{ form_start(form) }}

    {# Form #}
    <!-- Content Row -->
    <div class="row">

        <!-- Area Chart -->
        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <!-- Card Header -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">{{ button|default('Formulaire') }} un utilisateur</h6>
                </div>

                <!-- Card Body - search options -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">{{ form_row(form.username, {'label':"Nom d'utilisateur"}) }}</div>
                        <div class="col-md-6" {% if app.request.get('_route') == 'admin.user.edit' %}style="display:none;"{% endif %}>
                            {{ form_row(form.password, {'label':"Mot de passe"}) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">{{ form_row(form.roles, {'label':"Sélectionnez les droits accordés à cet utilisateur (vous pourrez les modifier à tout moment) :"}) }}</div>
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-6">{{ form_row(form.name, {'label':"Prénom de l'utilisateur"}) }}</div>
                                <div class="col-md-6">{{ form_row(form.familyName, {'label':"Nom de l'utilisateur"}) }}</div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">{{ form_row(form.emailAddress, {'label':"Adresse email"}) }}</div>
                                <div class="col-md-6">{{ form_row(form.phone, {'label':"Numéro de téléphone"}) }}</div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">{{ form_row(form.activate, {'label':"Utilisateur actif"}) }}</div>
                    </div>
                </div>

            </div>

            <div class="text-right">
                <div style="display:inline-block;"><button class="btn btn-sm btn-primary shadow-sm">{{ button|default('Enregistrer') }}</button></div>
                <div style="display:inline-block"><a href="{{ path('admin.user.cancel') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"> Annuler</a></div>
            </div>

        </div>

    </div>

    {{ form_end(form) }}
{% endblock %}
